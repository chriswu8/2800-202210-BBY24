<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Postings</title>
    <link rel="stylesheet" href="/css/index.css"> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/string-strip-html/dist/string-strip-html.umd.js"></script>

</head>


<body>

    <header class="header">

        <div class="flex">
    
           <a href="#home" class="logo"><img src="../css/img/logo.png" alt=""></a>
    
           <!-- Inspiration from Skaikh Anas start -->
           <nav class="navbar">
              <a href="/regular">HOME</a>
              <a href="/protocols">PROTOCOLS</a>
              <a href="/weather">WEATHER</a>
              <a href="/login/postings">BLOG</a>
              <a href="/profile">PROFILE</a>
              <a id="logout" href="/logout">LOGOUT</a>
           </nav>
           <!-- Inspiration from Skaikh Anas end -->
    
    
           <div class="dropdown" style="float:right;">
              <button class="dropbtn">MENU</button>
              <div class="dropdown-content">
                 <a href="/regular">HOME</a>
                 <a href="/protocols">PROTOCOLS</a>
                 <a href="weather/">WEATHER</a>
                 <a href="/login/postings">BLOG</a>
                 <a href="profile/">PROFILE</a>
    
                 <a id="logout" href="/logout">LOGOUT</a>
                 <!--Bo -->
              </div>
           </div>
        </div>
    
     </header>

    <h1> Postings </h1>
    <div class="above">

        <div class="row mb-1">
            <a href="/new"> <button type="button" id="create" class="btn btn-dark">Create posting</button></a>
            <button type="button" class="btn">
                <a href="/regular" id="back" class="btn btn-dark">Go Back</a>
            </button>
            <br><br>
        </div>

        <div class="row">

            <% posts.forEach(post=>{ %>

                <div class="container">

                    <div class="card" style="width: 100%;"> 
                        <img class="card-img-top" src="../css/img/highWind.jpg" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">
                                <p style="font-size: 30px;">
                                    <%= post.title %>
                                </p>
                            </h5>
                            <p class="card-text">
                                <%= post.description %>
                            </p>
                            <a href="#"  id="readMore" class="btn btn-primary">Read more</a>
                        </div>

                        <span class="posterAndDate"> <span>
                            <img id="avatar" src="../css/img/avatar.png" alt="Avatar" class="rounded-circle" >
                                <b> 
                                    <%= post.author %>
                                </b>
                            </span>
                            <p style="font-size: 12px; line-height: 0.4rem;">
                                <br> &nbsp; <%= post.dateCreated.toLocaleDateString() %>
                            </p>
                        </span>

                    </div>

                </div>

                <% }) %>
        </div>
</body>

</html>