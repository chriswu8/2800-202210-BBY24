<%- include('layouts/adminHeader'); %>
    <div class="container">
        <h1><%= title %></h1>
        <form method="post" action="/add" enctype="multipart/form-data">
            <div class="form-group">
                <label class="label">Name*</label>
                <input type="text" id='name' name="name" class="form-control" placeholder="Please enter name" pattern="[a-zA-Z0-9_ ]* required>
            </div>
            <div class="form-group">
                <label class="label">Password*</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Please enter password" required>
            </div>
            <div class="form-group">
                <label class="label">Email*</label>
                <input type="email" name="email" class="form-control" placeholder="Please enter email" id="email" required>
            </div>
            <div class="form-group">
                <label class="label">Phone Number*</label>
                <input type="text" name="number" class="form-control" pattern="[0-9]" placeholder="Please enter phone number" id="number" required>
            </div>
            <div>
                <label class="label">User Type*</label>
            </div>
            <div id="multiple-choice-container">
                <input type="radio" id="admin" name="type" value="admin">
                <label for="admin">Admin</label>
                <input type="radio" id="regular" name="type" value="regular" checked="checked">
                <label for="regular">Regular</label>
            </div>
            <button value="Add User">Add User</button>
            <button type="reset">Reset</button>
            <button type="submit" class="btn" onclick="history.back()">
                Go Back
            </button>
        </form>
    </div>
    <script src="/js/format.js"></script>
