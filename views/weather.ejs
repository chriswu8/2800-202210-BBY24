<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Weather</title>

  <!-- font awesome cdn -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

  <!-- custom css file -->
  <link rel="stylesheet" href="../css/weather.css">

</head>

<body>

  <header class="header">

    <div class="flex">

      <a href="#home" class="logo"><img src="../css/img/logo.png" alt=""></a>

      <!-- Inspiration from Skaikh Anas start -->
      <nav class="navbar">
        <a href="/regular">HOME</a>
        <a href="/protocols">PROTOCOLS</a>
        <a href="/weather">WEATHER</a>
        <a href="/login/postings">BLOG</a>
        <a href="/profile">PROFILE</a>
        <a id="logout" href="/logout">LOGOUT</a>
      </nav>
      <!-- Inspiration from Skaikh Anas end -->


      <div class="dropdown" style="float:right;">
        <button class="dropbtn">MENU</button>
        <div class="dropdown-content">
          <a href="/regular">HOME</a>
          <a href="/protocols">PROTOCOLS</a>
          <a href="/weather">WEATHER</a>
          <a href="/login/postings">BLOG</a>
          <a href="/profile">PROFILE</a>

          <a id="logout" href="/logout">LOGOUT</a>
          <!--Bo -->
        </div>
      </div>
    </div>

  </header>

  </div>
  <section class="top-banner">
    <div class="container">
      <h3 class="heading">City Temperature</h3>
      <form action="/weather" method="POST">
        <input id="inputField" type="text" placeholder="*Search for a city" autofocus name="city" required>
        <button class="bottomButton1" type="submit">SUBMIT</button>
        <input class="bottomButton2" type="button" value="Back" onclick="history.go(-1)">
      </form>
    </div>
  </section>

  <!-- Displays the weather page based on the work of Cand Dev - start
  @author Cand Dev
  @see https://youtu.be/6LaGLqUHKms -->
  <% if (city !='' ) { %>
    <section class="ajax-section">
      <div class="container">
        <ul class="city">
          <li class="city">
            <% if(city !==null) {%>
              <h2 class="city-name">
                <span class="city">
                  <%= city %>
                </span>
                <sup>
                  <%= country %>
                </sup>
              </h2>
              <% } %>

                <% if(tempReal !==null) {%>
                  <div class="city-temp">
                    <%= tempReal %><sup>Â°C</sup>
                  </div>
                  <% } %>
                    <figure>
                      <% if(img !==null) {%>
                        <img class="city-icon" src="<%= img %>" alt="">
                        <% } %>
                          <% if(des !==null) {%>
                            <figcaption class="des">
                              <%= des %>
                            </figcaption>
                            <% } %>
                    </figure>
          </li>
        </ul>
      </div>
    </section>
    <% } else { %>
      <h4></h4>
      <% } %>

        <script src="/js/weather.js"></script>
        <!-- Displays the weather page based on the work of Cand Dev - end -->
</body>

</html>