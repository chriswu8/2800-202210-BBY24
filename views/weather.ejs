<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Weather</title>

   <!-- font awesome cdn -->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

   <!-- custom css file -->
   <link rel="stylesheet" href="../css/weather.css">

</head>

<body>
      </div>
      <section class="top-banner">
        <div class="container">
          <h1 class="heading">Simple Weather App</h1>
          <form action="/weather" method="POST">
            <input type="text" placeholder="Search for a city" autofocus name="city">
            <button type="submit">SUBMIT</button>
            <span class="msg"></span>
          </form>
        </div>
      </section>
      <section class="ajax-section">
        <div class="container">
          <ul class="cities">
            <li class="cities">
            <% if(city !== null)  {%>
                <h2 class="city-name">
                  <span><%= city %></span>   
                </h2>
                <% } %>
          
                <% if(tempReal !== null)  {%>
                <div class="city-temp"><%= tempReal %><sup>Â°C</sup></div>
                <% } %>
                <figure>
                  <% if(img !== null)  {%>
                  <img class="city-icon" src="<%= img %>" alt="">
                  <% } %>
                  <% if(des !== null)  {%>
                  <figcaption class="des"><%= des %></figcaption>
                  <% } %>
                </figure>
            </li>
          </ul>
        </div>
      </section>

</body>
</html>
