<!DOCTYPE html>
<html lang="en">

<%- include('../layouts/adminHeader'); %>

    <body>


        <h2 class="pageTitle">Edit a category</h2>
        <a href="/admin/categories" class="btn btn-primary">Back to all categories </a>
        <br><br>

        <form action="/admin/categories/editCategory/<%= id %>" method="POST">

            <div class="form-group">
                <label>Title</label>
                <input class="form-control" type="text" name="title" placeholder="Title" pattern="[a-zA-Z0-9_ ]*" required>
            </div>

            <button type="submit" class="btn btn-dark">Submit</button>
        </form>


    </body>

</html>