<!DOCTYPE html>
<html lang="en">
<%- include('../layouts/adminHeader'); %>

    <body>

        <%- include('../layouts/adminNavbar'); %>
            <br>
            <h2 class="pageTitle">Categories</h2>
            <input id="backButton" type="button" value="Back" onclick="history.go(-1)">
            <a id="addCategory" href="/admin/categories/addCategory" class="btn btn-primary">Add a new category </a>
            <br><br>

            <table class="p-3 table table-striped">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>

                <!-- Displays all the category titles based on the work of easylearning97 - start
                 @author easylearning97 
                 @see https://www.youtube.com/watch?v=5b3-fAufjEk&list=PL78sHffDjI75uMmHCqxil_YROcHl5ONNj -->

                <tbody>
                    <% categories.forEach(function(cat) { %>
                        <tr>
                            <td>
                                <%= cat.title %>
                            </td>
                            <td> <a href="/admin/categories/editCategory/<%= cat.title %>">Edit</a></td>
                            <td class="deletion"> <a class="confirmDeletion"
                                    onclick="return confirm('Are you sure you want to delete?');"
                                    href="/admin/categories/deleteCategory/<%= cat._id %>"
                                    title="This will permanently remove this category">Delete</a>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
                <!-- Displays all the category titles based on the work of easylearning97 - end -->

            </table>

            <%- include('../layouts/adminFooter'); %>

    </body>

</html>